{
	"name": "simple-node-site-crawler",
	"version": "0.3.10",
	"description": "A simple node module to crawl a domain and generate a page list. ",
	"type": "module",
	"main": "dist/index.js",
	"scripts": {
		"build": "tsc",
		"test": "vitest --run --coverage",
		"lint": "eslint --fix",
		"format": "prettier --write .",
		"release": "yarn build && npm publish"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/mirite/Node-Site-Crawler.git"
	},
	"keywords": [
		"crawler",
		"node",
		"web",
		"tools"
	],
	"author": "Jesse Conner",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/mirite/Node-Site-Crawler/issues"
	},
	"homepage": "https://github.com/mirite/Node-Site-Crawler#readme",
	"dependencies": {
		"axios": "^1.7.3",
		"jsdom": "^24.1.1",
		"typescript": "^5.5.4"
	},
	"devDependencies": {
		"@mirite/eslint-config-mirite": "^0.0.4",
		"@types/node": "^22.2.0",
		"@vitest/coverage-v8": "^2.0.5",
		"eslint": "^9.9.0",
		"prettier": "^3.3.3",
		"prettier-plugin-jsdoc": "^1.3.0",
		"vitest": "*"
	},
	"packageManager": "yarn@4.4.0",
	"files": [
		"dist/**/*"
	]
}
