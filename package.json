{
	"name": "simple-node-site-crawler",
	"version": "0.3.11",
	"description": "A simple node module to crawl a domain and generate a page list. ",
	"type": "module",
	"main": "dist/index.js",
	"scripts": {
		"build": "tsc",
		"test": "vitest --run --coverage",
		"lint": "eslint --fix --cache",
		"format": "prettier --write --cache .",
		"release": "yarn build && npm publish"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/mirite/Node-Site-Crawler.git"
	},
	"keywords": [
		"crawler",
		"node",
		"web",
		"tools"
	],
	"author": "Jesse Conner",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/mirite/Node-Site-Crawler/issues"
	},
	"homepage": "https://github.com/mirite/Node-Site-Crawler#readme",
	"dependencies": {
		"axios": "^1.8.4",
		"jsdom": "^26.0.0",
		"typescript": "^5.8.2"
	},
	"devDependencies": {
		"@mirite/eslint-config-mirite": "^1.0.1",
		"@types/node": "^22.13.13",
		"@vitest/coverage-v8": "^3.0.9",
		"eslint": "^9.23.0",
		"prettier": "^3.5.3",
		"prettier-plugin-jsdoc": "^1.3.2",
		"vitest": "^3.0.9"
	},
	"packageManager": "yarn@4.7.0",
	"files": [
		"dist/**/*"
	]
}
